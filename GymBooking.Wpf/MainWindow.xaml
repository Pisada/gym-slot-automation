<Window x:Class="GymBooking.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Gym Booking Assistant"
        Height="780" Width="1180"
        MinHeight="680" MinWidth="980"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="8"
                            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0C141F" Offset="0" />
                <GradientStop Color="#0A111A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="14 10 14 14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Title bar -->
            <Grid Grid.Row="0"
                  Height="32"
                  Margin="0 0 0 12"
                  shell:WindowChrome.IsHitTestVisibleInChrome="True"
                  MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Gym Booking"
                           FontSize="12"
                           Foreground="{StaticResource Muted}"
                           VerticalAlignment="Center" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="MinimizeButton"
                            Content="&#xE921;"
                            FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource TitleBarButton}"
                            Click="OnMinimize" />
                    <Button x:Name="MaxRestoreButton"
                            Content="&#xE922;"
                            FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource TitleBarButton}"
                            Margin="8 0 0 0"
                            Click="OnToggleMaxRestore" />
                    <Button Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource TitleBarButton}"
                            Margin="8 0 0 0"
                            Click="OnClose" />
                </StackPanel>
            </Grid>
            <!-- Header -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Padding="18"
                    Margin="0 0 0 12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Gym Booking Assistant"
                                   FontFamily="Segoe UI Semibold"
                                   FontSize="26"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0 0 0 4" />
                        <TextBlock Text="Minimal flow to launch bookings fast and monitor live."
                                   FontSize="12"
                                   Margin="0 0 0 6" />
                        <TextBlock Text="Inputs stay on device unless you turn on Remember."
                                   FontSize="11" />
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border Background="{StaticResource CardAlt}"
                                BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="12 8"
                                Margin="0 0 10 0">
                            <StackPanel>
                                <TextBlock x:Name="CountdownTitle"
                                           Text="Countdown to midnight"
                                           FontSize="10.5"
                                           Foreground="{StaticResource Muted}" />
                                <TextBlock x:Name="CountdownLabel"
                                           Text="--:--:--"
                                           FontFamily="Segoe UI Semibold"
                                           FontSize="16"
                                           Foreground="{StaticResource Accent}" />
                            </StackPanel>
                        </Border>
                        <Button x:Name="StartButton"
                                Content="Start booking"
                                Click="OnStart" />
                        <Button x:Name="CancelButton"
                                Content="Cancel"
                                Click="OnCancel"
                                Style="{StaticResource SecondaryButton}"
                                Margin="10 0 0 0" />
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Body -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.4*" MinWidth="520" />
                    <ColumnDefinition Width="1*" MinWidth="420" />
                </Grid.ColumnDefinitions>
                <!-- Left column -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardStyle}"
                        Margin="0 0 10 0">
                    <StackPanel>
                        <TextBlock Text="Booking details"
                                   FontSize="18"
                                   FontFamily="Segoe UI Semibold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0 0 0 2" />
                        <TextBlock Text="Fill once, rerun quickly, and keep only what you need."
                                   FontSize="12"
                                   Margin="0 0 0 10" />
                        <TextBlock Text="Access"
                                   FontSize="14"
                                   FontFamily="Segoe UI Semibold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0 4 0 4" />
                        <Border Background="{StaticResource SurfaceAlt}"
                                BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0 0 8 0">
                                    <TextBlock Text="Username" FontSize="12" Margin="0 0 0 4" />
                                    <TextBox x:Name="UsernameBox" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="8 0 0 0">
                                    <TextBlock Text="Password" FontSize="12" Margin="0 0 0 4" />
                                    <PasswordBox x:Name="PasswordBox" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <TextBlock Text="Date &amp; attempts"
                                   FontSize="14"
                                   FontFamily="Segoe UI Semibold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0 4 0 4" />
                        <Border Background="{StaticResource SurfaceAlt}"
                                BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.1*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0 0 8 0">
                                    <TextBlock Text="Day" FontSize="12" Margin="0 0 0 4" />
                                    <TextBox x:Name="DayBox" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="8 0 8 0">
                                    <TextBlock Text="Month" FontSize="12" Margin="0 0 0 4" />
                                    <TextBox x:Name="MonthBox" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Day click attempts" FontSize="12" Margin="0 0 0 4" />
                                    <TextBox x:Name="DayAttemptsBox" Text="5" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <TextBlock Text="Slot &amp; automation"
                                   FontSize="14"
                                   FontFamily="Segoe UI Semibold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0 4 0 4" />
                        <Border Background="{StaticResource SurfaceAlt}"
                                BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Preferred slot" FontSize="13" FontFamily="Segoe UI Semibold" Foreground="{StaticResource TextPrimary}" />
                                <UniformGrid Columns="2" Margin="0 6 0 4">
                                    <RadioButton x:Name="Slot0" Content="14:00 - 15:30" IsChecked="True" GroupName="Slots" />
                                    <RadioButton x:Name="Slot1" Content="15:30 - 17:00" GroupName="Slots" />
                                    <RadioButton x:Name="Slot2" Content="17:00 - 18:30" GroupName="Slots" />
                                    <RadioButton x:Name="Slot3" Content="18:30 - 20:00" GroupName="Slots" />
                                </UniformGrid>
                                <TextBlock Text="We'll stick to this slot unless fallback is enabled below."
                                           FontSize="11"
                                           Margin="0 0 0 6" />
                                <WrapPanel Orientation="Horizontal"
                                           VerticalAlignment="Center"
                                           Margin="0 4 0 0">
                                    <CheckBox x:Name="WaitMidnightBox" Content="Wait and start near midnight" Margin="0 4 16 4" />
                                    <CheckBox x:Name="TryOthersBox" Content="Try other slots if primary fails" Margin="0 4 16 4" />
                                    <CheckBox x:Name="RememberBox" Content="Remember details on this device" Margin="0 4 0 4" />
                                </WrapPanel>
                                <TextBlock Text="Remember saves to booking_config.json on this machine only."
                                           FontSize="10.5"
                                           Foreground="{StaticResource Muted}"
                                           Margin="0 4 0 0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                <!-- Right column -->
                <Grid Grid.Column="1" Margin="10 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="0 0 0 12">
                        <StackPanel>
                            <TextBlock Text="Live status"
                                       FontSize="18"
                                       FontFamily="Segoe UI Semibold"
                                       Foreground="{StaticResource TextPrimary}" />
                            <TextBlock Text="Glanceable state while automation runs."
                                       Margin="0 2 0 10" />
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Width="12"
                                        Height="12"
                                        CornerRadius="6"
                                        Background="{StaticResource Accent}"
                                        Margin="0 0 10 0"
                                        VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" Margin="0 0 0 2">
                                    <TextBlock Text="Current state" FontSize="12" Margin="0 0 0 2" />
                                    <TextBlock x:Name="StatusLabel"
                                               Text="Idle"
                                               FontSize="20"
                                               FontFamily="Segoe UI Semibold"
                                               Foreground="{StaticResource Accent}" />
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="A screenshot (booking_result.png) lands next to this app after each run."
                                       FontSize="11"
                                       Margin="0 10 0 0" />
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardStyle}" Grid.Row="1" MinHeight="260" VerticalAlignment="Stretch">
                        <Grid VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Margin="0 0 0 8">
                                <TextBlock Text="Activity log"
                                           FontSize="18"
                                           FontFamily="Segoe UI Semibold"
                                           Foreground="{StaticResource TextPrimary}" />
                                <TextBlock Text="Streamed updates from Playwright appear instantly."
                                           FontSize="12" />
                            </StackPanel>
                            <Border Grid.Row="1"
                                    Background="{StaticResource SurfaceAlt}"
                                    BorderBrush="{StaticResource BorderLight}"
                                    BorderThickness="1"
                                    CornerRadius="14"
                                    Padding="12"
                                    MinHeight="0"
                                    VerticalAlignment="Stretch">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled"
                                              VerticalAlignment="Stretch">
                                    <TextBlock x:Name="LogBlock"
                                               FontFamily="Consolas"
                                               FontSize="12.5"
                                               Foreground="{StaticResource TextPrimary}"
                                               TextWrapping="Wrap"
                                               Text="Log will appear here once a run starts." />
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
